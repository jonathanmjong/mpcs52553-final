<div class="container">
	<div class="row">
		<h1>Edit <%= educatorFromController.educatorName %>'s Profile</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/educators/<%= educatorFromController._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="educatorEditedFromView[educatorName]" value="<%= educatorFromController.educatorName %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="educatorEditedFromView[educatorPrice]" value="educatorFromController.educatorPrice" min="0.01" step="1.00">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="educatorEditedFromView[educatorImage]" value="<%= educatorFromController.educatorImage %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="educatorEditedFromView[educatorDescription]" value="<%= educatorFromController.educatorDescription %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
				</div>
			</form>
			<a href="/educators">Back to EdaMate profiles </a>
		</div>
	</div>
</div>